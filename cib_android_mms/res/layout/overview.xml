        	android:id="@+id/btn_status"
        	android:layout_width="24px"
			android:layout_height="24px"
			android:gravity="right"
            android:padding="3dip" />
        <ImageButton
        	android:id="@+id/btn_edit"
        	android:layout_width="24px"
			android:layout_height="24px"
			android:gravity="right"
            android:padding="3dip" />
        <ImageButton
        	android:id="@+id/btn_delete"
        	android:layout_width="24px"
			android:layout_height="24px"
			android:gravity="right"
            android:padding="3dip" />
        	
    </TableRow>

</TableLayout>