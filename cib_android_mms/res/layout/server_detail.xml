<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:background="#000000"
	android:layout_width="fill_parent" 
	android:layout_height="fill_parent" >
	
	<ScrollView
	android:layout_width="fill_parent" 
	android:layout_height="fill_parent">
	
	<TableLayout
	android:background="#000000"
	android:layout_width="fill_parent" 
	android:layout_height="fill_parent"
	android:stretchColumns="1">
	
		<TableRow>
			<TextView android:id="@+id/titleHost" 
				android:layout_width="fill_parent"
				android:layout_height="wrap_content" 
				android:textColor="#458b74"
				android:background="#000000"
				android:text="Name of Server:"
				android:padding="4dip" />

			<TextView android:id="@+id/hostname" 
				android:layout_width="fill_parent"
				android:layout_height="wrap_content" 
				android:textColor="#458b74"
				android:background="#000000"
				android:text="hostname"
				android:padding="5dip" />
				
			<Button  android:id="@+id/bt_diagram" 
				android:layout_height="wrap_content"
				android:layout_width="fill_parent" 
				android:text="RAM Graph"
				android:textColor="#CCCCCC"
				android:textSize="10dip"
				android:gravity="bottom" 
				android:background="@drawable/line_graph"
				android:onClick="btDiagram"/>
	
		</TableRow>
		
		<TableRow>
			<TextView android:id="@+id/titleRefreshDate"
				android:layout_width="fill_parent" 
				android:layout_height="wrap_content"
				android:textColor="#458b74" 
				android:background="#000000"
				android:text="last refresh:" 
				android:padding="4dip" />

			<TextView android:id="@+id/lastRefresh"
				android:layout_width="fill_parent" 
				android:layout_height="wrap_content"
				android:textColor="#458b74" 
				android:background="#000000"
				android:text="no data ..." 
				android:padding="5dip" />
				
			
		
		</TableRow>
		
		<View android:layout_height="2dip"		 
			android:layout_width="fill_parent"
			android:background="#00ee76" />
			
		
		<TableRow>	
			<TextView android:id="@+id/titleTime" 
				android:layout_width="fill_parent"
				android:layout_height="wrap_content" 
				android:textColor="#458b74"
				android:background="#000000" 
				android:text="Time:"
				android:padding="4dip" />

			<TextView android:id="@+id/titleStatus" 
				android:layout_width="fill_parent"
				android:layout_height="wrap_content" 
				android:textColor="#458b74"
				android:background="#000000" 
				android:text="Status:"
				android:padding="5dip" /> 
			
			<TextView android:id="@+id/titleProcess" 
				android:layout_width="fill_parent"
				android:layout_height="wrap_content" 
				android:textColor="#458b74"
				android:background="#000000" 
				android:text="Process:"
				android:padding="5dip"/>	
			</TableRow>
			
				<View android:layout_height="1dip"
				android:layout_width="fill_parent"
				android:background="#00ee76" />
		
		<TableRow>
			<TextView android:id="@+id/time" 
				android:layout_width="fill_parent"
				android:layout_height="wrap_content" 
				android:textColor="#458b74"
				android:background="#000000" 
				android:text="time"
				android:padding="4dip" />

			<TextView android:id="@+id/status" 
				android:layout_width="fill_parent"
				android:layout_height="wrap_content" 
				android:textColor="#458b74"
				android:background="#000000" 
				android:text="status"
				android:padding="5dip" /> 
			
			<TextView android:id="@+id/process" 
				android:layout_width="fill_parent"
				android:layout_height="wrap_content" 
				android:textColor="#458b74"
				android:background="#000000" 
				android:text="process"
				android:padding="5dip" />		
		</TableRow>
		
				<View android:layout_height="2dip"
				android:layout_width="fill_parent"
				android:background="#00ee76" />

		
	</TableLayout>
	</ScrollView>
</LinearLayout>